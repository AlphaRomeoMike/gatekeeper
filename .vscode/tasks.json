{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "docker-run: debug",
            "type": "shell",
            "command": "docker compose up --build --abort-on-container-exit",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": [
                "docker compose: build"
            ]
        },
        {
            "label": "docker compose: build",
            "type": "shell",
            "command": "docker compose build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}